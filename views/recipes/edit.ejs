<% include ../partials/header %>
<div class="container">
    <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
        <div style="width:30%; margin: 0 auto;">
            <h3 style="text-align: center; margin-top:10px;">Edit <%=recipe.name%></h3>
            <div class="form-group">
                <label for="name">Recipe's Name</label>
                <input type="text" name="recipe[name]" class="form-control" value="<%=recipe.name%>" required>
              </div>
              <div class="form-group">
                  <label for="name">Recipe's Image</label>
                  <input type="text" name="recipe[image]" class="form-control" value="<%=recipe.image%>" required>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Tell Us About Your Recipe</label>
                  <textarea name="recipe[description]" style="resize:none;" class="form-control" id="exampleFormControlTextarea1" rows="8" required>"<%=recipe.description%>"</textarea>
                </div>
              <button type="submit" class="btn btn-primary btn-block">Submit!</button>
              <p></p>
              <a href="/recipes">View All Recipe</a>
        </div>
        
      </form>
</div>

<% include ../partials/footer %>
